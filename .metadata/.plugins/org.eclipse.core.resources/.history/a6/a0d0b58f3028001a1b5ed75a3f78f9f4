	public void refreshList(String username) {
		frame.setVisible(false);
		Pharmacy pharmacy = ClientConnection.getUserInfo(username).get(0);
		new UserMainPage(pharmacy.getId(), pharmacy.getUsername(), pharmacy.getName(), pharmacy.getAddress(), pharmacy.getEmail(), pharmacy.getDistrict(), pharmacy.getPhone());
	}
}
